    <script>
        const hamburger = document.querySelector(".hamburger");
        const navMenu = document.querySelector(".nav-menu");

        hamburger.addEventListener("click", () => {
            hamburger.classList.toggle("active");
            navMenu.classList.toggle("active");
        });

        document.querySelectorAll(".nav-link").forEach(n => n.addEventListener("click", () => {
            hamburger.classList.remove("active");
            navMenu.classList.remove("active");
        }));

        // Flash Sales Countdown Timer
        function startCountdown() {
            let hours = 12, minutes = 45, seconds = 30;

            setInterval(() => {
                seconds--;
                if (seconds < 0) {
                    seconds = 59;
                    minutes--;
                }
                if (minutes < 0) {
                    minutes = 59;
                    hours--;
                }
                if (hours < 0) {
                    hours = 23; minutes = 59; seconds = 59;
                }

                document.getElementById('hours').textContent = hours.toString().padStart(2, '0');
                document.getElementById('minutes').textContent = minutes.toString().padStart(2, '0');
                document.getElementById('seconds').textContent = seconds.toString().padStart(2, '0');
            }, 1000);
        }
        startCountdown();

        // Slider Logic
        const slides = document.querySelectorAll('.slide');
        const nextBtn = document.querySelector('.next-btn');
        const prevBtn = document.querySelector('.prev-btn');
        const dotsContainer = document.querySelector('.slider-dots');

        let currentSlide = 0;
        const totalSlides = slides.length;
        let slideInterval;

        // Create Dots
        slides.forEach((_, index) => {
            const dot = document.createElement('div');
            dot.classList.add('dot');
            if (index === 0) dot.classList.add('active');
            dot.addEventListener('click', () => goToSlide(index));
            dotsContainer.appendChild(dot);
        });

        const dots = document.querySelectorAll('.dot');

        function updateSlider() {
            slides.forEach((slide, index) => {
                slide.classList.remove('active');
                dots[index].classList.remove('active');
                if (index === currentSlide) {
                    slide.classList.add('active');
                    dots[index].classList.add('active');
                }
            });
        }

        function nextSlide() {
            currentSlide = (currentSlide + 1) % totalSlides;
            updateSlider();
        }

        function prevSlide() {
            currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
            updateSlider();
        }

        function goToSlide(index) {
            currentSlide = index;
            updateSlider();
            resetTimer();
        }

        function resetTimer() {
            clearInterval(slideInterval);
            slideInterval = setInterval(nextSlide, 5000);
        }

        // Event Listeners
        nextBtn.addEventListener('click', () => {
            nextSlide();
            resetTimer();
        });

        prevBtn.addEventListener('click', () => {
            prevSlide();
            resetTimer();
        });

        // Cart Logic
        let cartCount = 3; // Starting with 3 as per HTML
        const cartBadge = document.querySelector('.cart-badge');
        const addToCartBtns = document.querySelectorAll('.add-cart-btn');

        addToCartBtns.forEach(btn => {
            btn.addEventListener('click', function () {
                // Animation effect
                const originalText = this.innerHTML;
                this.innerHTML = 'Added!';
                this.style.backgroundColor = '#10b981'; // Green color

                // Update count
                cartCount++;
                cartBadge.textContent = cartCount;

                // Animate badge
                cartBadge.style.transform = 'scale(1.2)';
                setTimeout(() => {
                    cartBadge.style.transform = 'scale(1)';
                }, 200);

                // Reset button after delay
                setTimeout(() => {
                    this.innerHTML = originalText;
                    this.style.backgroundColor = '';
                }, 1500);
            });
        });

        // Autoplay
        slideInterval = setInterval(nextSlide, 5000);
    </script>

    <script>
        // Search Functionality
        const searchToggle = document.getElementById('searchToggle');
        const searchContainer = document.getElementById('searchContainer');
        const searchInput = document.getElementById('searchInput');
        const searchBtn = document.getElementById('searchBtn');

        // Toggle search bar
        searchToggle.addEventListener('click', () => {
            searchContainer.classList.toggle('active');
            if (searchContainer.classList.contains('active')) {
                searchInput.focus();
            }
        });

        // Search functionality
        function performSearch() {
            const query = searchInput.value.trim().toLowerCase();
            if (query) {
                // Simple search simulation - you can enhance this with actual search logic
                alert(`Searching for: "${query}"\n\nThis would normally search through products and redirect to search results page.`);
                searchInput.value = '';
                searchContainer.classList.remove('active');
            }
        }

        searchBtn.addEventListener('click', performSearch);
        searchInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                performSearch();
            }
        });

        // Account Dropdown Functionality
        const accountBtn = document.getElementById('accountBtn');
        const accountMenu = document.getElementById('accountMenu');

        accountBtn.addEventListener('click', (e) => {
            e.stopPropagation();
            accountMenu.classList.toggle('active');
        });

        // Close dropdown when clicking outside
        document.addEventListener('click', (e) => {
            if (!accountBtn.contains(e.target) && !accountMenu.contains(e.target)) {
                accountMenu.classList.remove('active');
            }
        });

        // Account Modal Functionality
        const accountModal = document.getElementById('accountModal');
        const modalClose = document.getElementById('modalClose');
        const accountForm = document.getElementById('accountForm');
        const modalTitle = document.getElementById('modalTitle');
        const modalSubtitle = document.getElementById('modalSubtitle');
        const submitBtn = document.getElementById('submitBtn');
        const switchToSignIn = document.getElementById('switchToSignIn');
        const successMessage = document.getElementById('successMessage');

        let isSignInMode = false;

        // Open modal for account creation
        document.querySelectorAll('.account-link')[1].addEventListener('click', (e) => {
            e.preventDefault();
            isSignInMode = false;
            showCreateAccountModal();
        });

        // Open modal for sign in
        document.querySelectorAll('.account-link')[0].addEventListener('click', (e) => {
            e.preventDefault();
            isSignInMode = true;
            showSignInModal();
        });

        function showCreateAccountModal() {
            modalTitle.textContent = 'Create Account';
            modalSubtitle.textContent = 'Join ShopLuxe for exclusive deals and personalized shopping';
            submitBtn.textContent = 'Create Account';
            switchToSignIn.textContent = 'Already have an account? Sign In';
            accountModal.classList.add('active');
            successMessage.style.display = 'none';

            // Show all form fields for account creation
            document.getElementById('firstName').parentElement.parentElement.style.display = 'grid';
            document.getElementById('lastName').parentElement.parentElement.style.display = 'grid';
            document.getElementById('confirmPassword').parentElement.style.display = 'block';
            document.querySelector('.checkbox-group').style.display = 'flex';
            document.querySelectorAll('.checkbox-group')[1].style.display = 'flex';
        }

        function showSignInModal() {
            modalTitle.textContent = 'Sign In';
            modalSubtitle.textContent = 'Welcome back! Please sign in to your account';
            submitBtn.textContent = 'Sign In';
            switchToSignIn.textContent = 'Don\'t have an account? Create Account';
            accountModal.classList.add('active');
            successMessage.style.display = 'none';

            // Hide unnecessary fields for sign in
            document.getElementById('firstName').parentElement.parentElement.style.display = 'none';
            document.getElementById('lastName').parentElement.parentElement.style.display = 'none';
            document.getElementById('confirmPassword').parentElement.style.display = 'none';
            document.querySelector('.checkbox-group').style.display = 'none';
            document.querySelectorAll('.checkbox-group')[1].style.display = 'none';
        }

        // Switch between sign in and create account
        switchToSignIn.addEventListener('click', () => {
            isSignInMode = !isSignInMode;
            if (isSignInMode) {
                showSignInModal();
            } else {
                showCreateAccountModal();
            }
        });

        // Close modal
        modalClose.addEventListener('click', () => {
            accountModal.classList.remove('active');
            accountForm.reset();
        });

        // Close modal when clicking outside
        accountModal.addEventListener('click', (e) => {
            if (e.target === accountModal) {
                accountModal.classList.remove('active');
                accountForm.reset();
            }
        });

        // Form submission
        accountForm.addEventListener('submit', (e) => {
            e.preventDefault();

            const formData = new FormData(accountForm);
            const data = Object.fromEntries(formData);

            // Basic validation
            if (!isSignInMode) {
                // Account creation validation
                if (data.password !== data.confirmPassword) {
                    alert('Passwords do not match!');
                    return;
                }

                if (data.password.length < 8) {
                    alert('Password must be at least 8 characters long!');
                    return;
                }

                if (!data.terms) {
                    alert('Please agree to the Terms & Conditions!');
                    return;
                }

                // Simulate account creation
                successMessage.textContent = `Account created successfully! Welcome ${data.firstName}!`;
                successMessage.style.display = 'block';
                submitBtn.textContent = 'Account Created!';
                submitBtn.style.background = '#10b981';

                // Reset form after 2 seconds
                setTimeout(() => {
                    accountModal.classList.remove('active');
                    accountForm.reset();
                    submitBtn.textContent = 'Create Account';
                    submitBtn.style.background = '';
                }, 2000);

            } else {
                // Sign in validation
                if (!data.email || !data.password) {
                    alert('Please fill in all fields!');
                    return;
                }

                // Simulate sign in
                successMessage.textContent = 'Sign in successful! Welcome back!';
                successMessage.style.display = 'block';
                submitBtn.textContent = 'Signed In!';
                submitBtn.style.background = '#10b981';

                // Reset form after 2 seconds
                setTimeout(() => {
                    accountModal.classList.remove('active');
                    accountForm.reset();
                    submitBtn.textContent = 'Sign In';
                    submitBtn.style.background = '';
                }, 2000);
            }
        });

        // Close dropdown when opening modal
        document.querySelectorAll('.account-link').forEach(link => {
            link.addEventListener('click', () => {
                accountMenu.classList.remove('active');
            });
        });
    </script>

    <!-- Footer -->
